page{
  font-size: 28rpx;
}

.body{
  width: 750rpx;
  height:100%;
  display: flex;
  flex-direction: column;
  background-color: #FCFCFC;
  border-bottom: 1px solid #ededed;
  word-wrap: break-word;
}

.main{
  width: 100%;
  height: 100%;
}

.padding-5-20{
  padding:10rpx 20rpx;
}

/*布局*/

.flex-col{
   flex-direction: column;
}

.flex-row{
   flex-direction: row;
}

/*浮动*/

.float-l{
   float: left;
}

.float-r{
   float: right;
}

/*字体颜色*/
.col-red{
  color:red;
}

/** 图片通用view*/
.img-view{
  width: auto;
  height:auto;
}

/*全宽按钮view*/
.all-width-btn-view{
  width: 100%;
  height: 100rpx;
  clear: both;
}

/**标签样式*/
.tag{
  width:720rpx;
  height:30rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border-left: 5px solid #DC5625;
  text-indent: 10rpx;
}